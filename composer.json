{
    "name": "openplus/site-canada",
    "description": "Project template for Drupal 8 sites built with the WxT distribution.",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "behat/behat": "^3.0",
        "behat/mink": "~1.7.1",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "bex/behat-screenshot": "~1.2.8",
        "composer/composer": "^1.4",
        "drupal/coder": "^8.3.7",
        "drupal/console": "~1.9.0",
        "drupal/drupal-extension": "~3.4.1",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsstream": "~1.2",
        "pdepend/pdepend": "2.1.0",
        "phpmd/phpmd": "@stable",
        "phpunit/phpunit": "^4.8.35 || ^6.1",
        "sebastian/phpcpd": "*",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/css-selector": "~2.8|~3.0",
        "symfony/phpunit-bridge": "^3.4.3"
    },
    "config": {
        "secure-http": false,
        "prestissimo": {
            "maxConnections": 10,
            "minConnections": 5
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "composer",
            "url": "https://drupalwxt.github.io/composer-extdeps/"
        },
        {
            "type": "github",
            "url": "git@github.com:openplus/openplus_migrate.git"
        },
        {
            "type": "github",
            "url": "git@github.com:openplus/openplus_vbo.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/openplus/canada.git"
        }
    ],
    "scripts": {
        "post-create-project-cmd": "rm -r -f .travis.yml behat.yml .travis-ci",
        "quick-start": [
            "composer install"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "html/"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "html/core": [
                "type:drupal-core"
            ],
            "html/libraries/{$name}": [
                "type:drupal-console-library",
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "html/modules/custom/{$name}": [
                "drupal/wxt_library",
                "openplus/openplus_migrate",
                "openplus/openplus_vbo"
            ],
            "html/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "html/profiles/{$name}": [
                "type:drupal-profile"
            ],
            "html/themes/custom/{$name}": [
                "drupal/wxt_bootstrap"
            ],
            "html/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "Enter drupal/core patch #1885192 description here":
                "https://www.drupal.org/files/issues/field-1885192-14.patch"
            },
            "drupal/ctools": {
                "Enter drupal/ctools patch #2695955 description here":
                "https://www.drupal.org/files/issues/2019-07-23/ctools_entity-bundle-condition_2695955-22.patch"
            }
        },
        "patches-ignore": {
            "acquia/lightning": {
                "drupal/core": {
                    "1356276 - Allow profiles to define a base/parent profile and load them in the correct order":
                    "https://www.drupal.org/files/issues/2019-11-05/1356276-531-8.8.x-4.patch",
                    "2914389 - Allow profiles to exclude dependencies of their parent":
                    "https://www.drupal.org/files/issues/2018-07-09/2914389-8-do-not-test.patch"
                }
            },
            "drupal/lightning_core": {
                "drupal/core": {
                    "1356276 - Allow profiles to define a base/parent profile and load them in the correct order":
                    "https://www.drupal.org/files/issues/2019-11-05/1356276-531-8.8.x-4.patch",
                    "2914389 - Allow profiles to exclude dependencies of their parent":
                    "https://www.drupal.org/files/issues/2018-07-09/2914389-8-do-not-test.patch"
                }
            }
        }
    },
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.7",
        "oomphinc/composer-installers-extender": "^1.1",
        "drupal/core-composer-scaffold": "*",
        "drush/drush": "^9.0",
        "acquia/lightning": "4.1.3",
        "openplus/canada": "dev-feat-tbs"
    },
    "autoload": {
        "classmap": [
            "scripts/ScriptHandler.php"
        ]
    }
}
